html
    head
        title GYMONATOR
        link(rel="stylesheet" href="/font/css/font-awesome.min.css")
        link(rel="stylesheet" href="/semantic/semantic-custom.css")
        link(rel="stylesheet" href="/semantic/dist/semantic.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(src="/semantic/dist/semantic.min.js")
           
        style(type='text/css').
           
           
            h1.ui.header{
            padding-top: 1em; 
            font-size: 4em;
            font-family: 'century gothic';
            font-weight: 200%;
            color:white;
            }
            h2{
            font-size:1.4em;
            padding:0;
            margin-top:0;   
            font-weight: 100%;
            color:#ffcccc;
            }
            .bg{
                background-color: #1B1C1E;
                width: auto;
                height: auto;
            }
            .ui.message.warning.transition.visible{
                height:60px;
                font-size:13px;
            }
            .regform{
                padding-top:20px;
            }
            h3.ui.horizontal.divider.header{
                font-weight:200%;
            }
            #programlist{
                padding-top:50;
                //- font-size:1.4em;
                //- margin-top:0;   
                //- font-weight: 100%;
                //- color:#000;
            }
            #programlist > .column> h2{
                font-size:1.4em;
                margin-top:0;   
                font-weight: 100%;
                color:#000;
            }
            #programlist > .column> a{
                margin-bottom:20;
                
            }
            #trainer{
                padding-top:30px;
            }
            
    body  
        #all.container             
            #navbar.ui.large.top.fixed.inverted.menu   
                    a.header.item(href='/member') A - TEAM FITNESS CENTER
                        i.heartbeat.icon      
                    .right.menu
                        .item.active.red Trainers
                        a.item(href='/member/prog') Program  
                        a.item(href='/login') Logout                  
            .bg
                .column
                    .ui.column.grid
                        .middle.aligned.center.aligned.column
                        
                            h1.ui.header Hi Admin!
                            h2 Manage your trainers here.
            .row
                .ui.two.column.centered.grid
                
                    #trainer.column 
                        .ui.three.column.grid   
                            .column   
                            .center.aligned.column
                                h1  Trainers list   
                            
                            //- .center.aligned.column
                            //-         .ui.icon.input
                            //-             input(type='text', placeholder='Search...' name='search')
                            //-             a.i.inverted.circular.search.link.icon(href='/member/train')          
  
                       
                    each trainer in trainers
                        tr
                            #programlist.ui.equal.width.center.aligned.grid
                                .column
                                    h2= `${trainer.trainerFName} ${trainer.trainerMName} ${trainer.trainerLName}`
                                .column
                                    h4= `${trainer.trainerDesc}`
                                .column
                                    h4= `${trainer.trainerContact} / ${trainer.trainerEmailAdd}`
                                .column
                                    button.large.ui.icon.button
                                        i.add.Id.Card.icon
                                        |   Apply

                        .ui.small.basic.modal
                            i.close.icon
                                .ui.icon.header
                            i.user.archive.icon
                            |     Trainer Prompt
                            .content
                                <center>
                                h4
                                    | Please enter the confirmation code provided by the trainer after contacting them via phone or email.
                                form.ui.form(method="POST" action=`/member/train/${membid}/${trainer.trainerID}`)
                                    .field
                                        input(type='text' placeholder='Confirmation Code' name="memtcode")
                                    .field
                                        <center>
                                        button.ui.fluid.large.red.submit.button(type='submit') Ok                   

    script.
        $('#all').transition({  
        animation  : 'fade in',
        duration   : '2s'});     
        $('.button.large.ui.icon.button').click(function(){ $('.ui.small.basic.modal').modal('setting', 'closable', true).modal('show')});