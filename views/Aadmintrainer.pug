html
    head
        title GYMONATOR
        link(rel="stylesheet" href="/font/css/font-awesome.min.css")
        link(rel="stylesheet" href="/semantic/semantic-custom.css")
        link(rel="stylesheet" href="/semantic/dist/semantic.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(src="/semantic/dist/semantic.min.js")
           
        style(type='text/css').
           
           
            h1.ui.header{
            padding-top: 1em; 
            font-size: 4em;
            font-family: 'century gothic';
            font-weight: 200%;
            color:white;
            }
            h2{
            font-size:1.4em;
            padding:0;
            margin-top:0;   
            font-weight: 100%;
            color:#ffcccc;
            }
            .bg{
                background-color: #1B1C1E;
                width: auto;
                height: auto;
            }
            .ui.message.warning.transition.visible{
                height:60px;
                font-size:13px;
            }
            .regform{
                padding-top:20px;
            }
            h3.ui.horizontal.divider.header{
                font-weight:200%;
            }
            #programlist{
                padding-top:50;
                //- font-size:1.4em;
                //- margin-top:0;   
                //- font-weight: 100%;
                //- color:#000;
            }
            #programlist > .column> h2{
                font-size:1.4em;
                margin-top:0;   
                font-weight: 100%;
                color:#000;
            }
            #programlist > .column> a{
                margin-bottom:20;
                
            }
            #trainer{
                padding-top:30px;
            }

    body        
        #all.container             
            #navbar.ui.large.top.fixed.inverted.menu   
                    a.header.item(href='/home') A - TEAM FITNESS CENTER
                        i.heartbeat.icon      
                    .right.menu
                        .item.active.red Trainers
                        a.item(href='/program') Program
                        a.item(href='/login') Logout                 
            .bg
                .column
                    .ui.column.grid
                        .middle.aligned.center.aligned.column
                        
                            h1.ui.header Hi Admin!
                            h2 Manage your trainers here.
            .row
                .ui.two.column.centered.grid
                
                    #trainer.column 
                        .ui.three.column.grid   
                            .column   
                            .center.aligned.column
                                h1  Trainers list     
                            .right.floated.right.aligned.column
                                a.button.large.ui.icon.button(href="/trainer/add")
                                            i.add.icon
                                            | Add Trainer
                        
                            each trainer in trainers
                                tr
                                    #programlist.ui.equal.width.center.aligned.grid
                                        .column
                                            h2= `${trainer.trainerFName} ${trainer.trainerMName} ${trainer.trainerLName}`
                                        .column
                                              h4= `${trainer.trainerDesc}`
                                        .column
                                             h4= `${trainer.trainerContact} / ${trainer.trainerEmailAdd}`
                                        .column
                                                a.button.ui.icon.button(href=`/trainer/edit/${trainer.trainerID}`)
                                                   i.edit.icon
                                                a.button.ui.icon.button(href=`/trainer/delete/${trainer.trainerID}`)
                                                    i.trash.icon

            //- script.
            //-     animation  : 'fade in',
            //-     $('#all').transition({  
            //-     duration   : '2s'});
        